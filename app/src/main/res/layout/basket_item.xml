<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/quarter_standard_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:ems="@integer/name_ems" />

        <TextView
            android:gravity="start"
            android:ems="@integer/price_ems"
            android:id="@+id/price_in_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/quarter_standard_margin"
            android:layout_marginStart="@dimen/quarter_standard_margin"
            android:layout_toEndOf="@+id/name"
            android:layout_toRightOf="@+id/name" />

        <TextView
            android:gravity="start"
            android:id="@+id/unity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/quarter_standard_margin"
            android:layout_marginStart="@dimen/quarter_standard_margin"
            android:layout_toEndOf="@+id/price_in_currency"
            android:layout_toRightOf="@+id/price_in_currency" />

        <Button
            android:id="@+id/decrease"
            android:layout_width="@dimen/button_size_normal"
            android:layout_height="@dimen/button_size_normal"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/quantity"
            android:layout_toStartOf="@+id/quantity"
            android:text="@string/line"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/increase"
            android:layout_toStartOf="@+id/increase"
            android:layout_marginLeft="@dimen/quarter_standard_margin"
            android:layout_marginRight="@dimen/quarter_standard_margin"
            android:gravity="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/increase"
            android:layout_width="@dimen/button_size_normal"
            android:layout_height="@dimen/button_size_normal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/plus"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>